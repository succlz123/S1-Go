<?xml version="1.0" encoding="utf-8"?>
<com.bilibili.magicasakura.widgets.TintLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/theme_color_view_background"
        android:elevation="1dp">

    <com.bilibili.magicasakura.widgets.TintTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/theme_color_text_primary"
            android:maxLines="3"
            android:ellipsize="end"
            android:id="@+id/title"
            android:layout_margin="5dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="5dp">

        <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <com.bilibili.magicasakura.widgets.TintTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/theme_color_secondary_dark"
                android:id="@+id/fid"
                android:layout_marginRight="5dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

        <com.bilibili.magicasakura.widgets.TintTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/last_poster"
                android:textColor="@color/theme_color_text_primary"
                android:layout_gravity="center_vertical"/>

        <com.bilibili.magicasakura.widgets.TintTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/last_post_time"
                android:textColor="@color/theme_color_text_primary"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>

        <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <com.bilibili.magicasakura.widgets.TintTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="回复"
                android:textColor="@color/theme_color_text_primary"
                android:layout_gravity="center_vertical"/>

        <com.bilibili.magicasakura.widgets.TintTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:id="@+id/reply"
                android:textColor="@color/theme_color_text_primary"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center_vertical"/>

        <com.bilibili.magicasakura.widgets.TintTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="点击"
                android:textColor="@color/theme_color_text_primary"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"/>

        <com.bilibili.magicasakura.widgets.TintTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/theme_color_text_primary"
                android:id="@+id/views"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"/>

    </LinearLayout>

</com.bilibili.magicasakura.widgets.TintLinearLayout>