<?xml version="1.0" encoding="utf-8"?>
<com.bilibili.magicasakura.widgets.TintFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="8dp"
        android:elevation="1dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/theme_color_view_background">

    <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:roundAsCircle="true"
            android:layout_gravity="center_horizontal"
            app:placeholderImage="@drawable/ic_user_img"
            app:placeholderImageScaleType="fitCenter"
            android:id="@+id/avatar"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_gravity="bottom|end"
            android:layout_height="wrap_content">

        <com.bilibili.magicasakura.widgets.TintTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/name"
                android:singleLine="true"
                android:textSize="18sp"
                android:textColor="@color/theme_color_text_primary"/>

        <com.bilibili.magicasakura.widgets.TintTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/uid"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/theme_color_text_tertiary"/>

    </LinearLayout>

</com.bilibili.magicasakura.widgets.TintFrameLayout>