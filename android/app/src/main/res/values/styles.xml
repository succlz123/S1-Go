<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Toolbar.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.Toolbar.Subtitle</item>
        <item name="titleMargin">0dp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <!--<item name="maxButtonHeight">?attr/navigationTopBarSize</item>-->
        <!--<item name="android:minHeight">?attr/navigationTopBarSize</item>-->
    </style>

</resources>